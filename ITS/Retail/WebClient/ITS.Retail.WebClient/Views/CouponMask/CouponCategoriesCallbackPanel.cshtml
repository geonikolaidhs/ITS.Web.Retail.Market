@Html.DevExpress().ComboBox(combosettings =>
{

    combosettings.Name = "couponCategoriesCallbackPanel";
    combosettings.CallbackRouteValues = new { Controller = "CouponMask", Action = "CouponCategoriesCallbackPanel" };
    combosettings.Properties.CallbackPageSize = 15;
    combosettings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
    combosettings.Properties.TextField = "Description";
    combosettings.Properties.ValueType = typeof(Guid);
    combosettings.Properties.ValueField = "Oid";
    combosettings.Properties.Columns.Add("Description", Resources.Description, 240);
    combosettings.Properties.Columns.Add("Code", Resources.Description, 80);
    combosettings.Properties.DropDownStyle = DropDownStyle.DropDownList;
    combosettings.Properties.FilterMinLength = 1;
    combosettings.Properties.NullText = Resources.SearchByDescription + " | " + Resources.ComboBoxNote;
    combosettings.Properties.ClientSideEvents.ButtonClick = "clearComboBox";
    combosettings.Properties.DropDownWidth = 400;
    combosettings.Properties.IncrementalFilteringDelay = 1000;

    EditButton button = new EditButton(" ");
    button.Image.Url = Url.Content("~/Content/img/del.png");
    button.Image.AlternateText = Resources.Clear;
    combosettings.Properties.Buttons.Add(button);
}).BindList(CouponMaskController.CouponCategoriesAllRequestedByFilterCondition, BaseController.RequestByValue(typeof(CouponCategory))).GetHtml()
