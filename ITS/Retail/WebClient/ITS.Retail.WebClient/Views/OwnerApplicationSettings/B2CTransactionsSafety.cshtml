@model ITS.Retail.Model.OwnerApplicationSettings

@Html.DevExpress().HtmlEditor(settings =>
{
    settings.Name = "B2CTransactionsSafety";
    settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
    settings.EncodeHtml = true;
    settings.Enabled = (ITS.Retail.WebClient.MvcApplication.ApplicationInstance != eApplicationInstance.STORE_CONTROLER);
    settings.CallbackRouteValues = new { Controller = "OwnerApplicationSettings", Action = "B2CTransactionsSafety" };
}).Bind(Model == null ? "" : Model.B2CTransactionsSafety).GetHtml()