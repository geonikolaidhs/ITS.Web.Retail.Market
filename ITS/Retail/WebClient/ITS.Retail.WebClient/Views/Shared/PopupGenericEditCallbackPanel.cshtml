@Html.DevExpress().CallbackPanel(settings =>
{
    settings.Name = "PopupGenericEditCallbackPanel";
    settings.SettingsLoadingPanel.Enabled = true;
    settings.CallbackRouteValues = new { Controller = "Document", Action = "PopupEditCallbackPanel" };
    settings.SetContent(() =>
    {
        Html.RenderAction("LoadEditPopup", "Document", new { ID = ViewData["ID"], Recover = ViewData["Recover"], Division = ViewData["Division"], LoadFromSession = ViewData["LoadFromSession"], HasReturnedFromOrderItemsForm = ViewData["HasReturnedFromOrderItemsForm"], RestoreTemporary = ViewData["RestoreTemporary"], Copy = ViewData["Copy"], DocType = ViewData["DocType"] });
    });
    settings.ClientSideEvents.BeginCallback = "PopupGenericEditCallbackPanelBeginCallback";

}).GetHtml()


