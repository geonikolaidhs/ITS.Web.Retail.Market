@using ITS.Retail.ResourcesLib;
@using ITS.Retail.WebClient;
@using ITS.Retail.Common;
<div id="settings" class="col-lg-1-5 settings-menu-bottom-spacing hidden">
    <h4 class="title_settings">
        <span class="shown">
            @Resources.Settings
            @{
                if (ViewBag.HideSpanSettings == null || ViewBag.HideSpanSettings == true)
                {
                    ViewContext.Writer.Write("<i class=\"fa fa-arrow-circle-o-left fa-2x\"></i>");
                }
            }
        </span>
        <span class="hidden">
            @Resources.Settings
            <i class="fa fa-arrow-circle-o-right fa-2x"></i>
        </span>
    </h4>
    @{
        List<string> forb = null;
        if (ViewBag.CurrentUser != null)
        {
            forb = Session["LayoutForbidden"] as List<string>;
            if (forb == null)
            {
                forb = new List<String>();
            }
        }
        else
        {
            forb = new List<string>();
        }
    }
    <ul class="second">
        <li class="first">
            @if (!forb.Contains("GDPRActions"))
            {
                <ul>
                    <li class="subtitle">
                        <h4>@Resources.GDPRActions <span></span></h4>
                    </li>
                    <li class="options">
                        <ul>
                            <li>
                                <a href="@Url.Content("~/GDPR/Export")">@Resources.GDPRExport</a>
                            </li>
                            <li>
                                <a href="@Url.Content("~/GDPR/Anonymize")">@Resources.GDPRAnonymize</a>
                            </li>
                            <li>
                                <a href="@Url.Content("~/GDPR/ExportSupplier")">@Resources.GDPRExportSupplier</a>
                            </li>
                            <li>
                                <a href="@Url.Content("~/GDPR/AnonymizeSupplier")">@Resources.GDPRAnonymizeSupplier</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            }
            @if (!forb.Contains("FormMessage") ||
                     !forb.Contains("AddressType") ||
                     !forb.Contains("PhoneType") ||
                     !forb.Contains("PaymentMethod") ||
                     !forb.Contains("MesurmentUnits") ||
                     !forb.Contains("BarcodeType") ||
                     !forb.Contains("TaxOffice") ||
                     !forb.Contains("VatLevel") ||
                     !forb.Contains("CustomEnumeration") ||

                     (MvcApplication.ApplicationInstance != eApplicationInstance.RETAIL && !forb.Contains("FiscalDevices")))
            {
                <ul>
                    <li class="subtitle">
                        <h4>@Resources.MenuOptionsSettigs <span></span></h4>
                    </li>
                    <li class="options">
                        <ul>
                            @if (!forb.Contains("FormMessage"))
                            {
                                <li>
                                    <a href="@Url.Content("~/FormMessage/Index")">@Resources.MenuAdministrationFormMessage</a>
                                </li>
                            }
                            @if (!forb.Contains("AddressType"))
                            {
                                <li>
                                    <a href="@Url.Content("~/AddressType/Index")">@Resources.MenuApplicationSettingsAddressTypes</a>
                                </li>
                            }
                            @if (!forb.Contains("PhoneType"))
                            {
                                <li>
                                    <a href="@Url.Content("~/PhoneType/Index")">@Resources.MenuApplicationSettingsPhoneTypes</a>
                                </li>
                            }
                            @if (!forb.Contains("CustomEnumeration"))
                            {
                                <li>
                                    <a href="@Url.Content("~/CustomEnumeration/Index")">@Resources.CustomEnumeration</a>
                                </li>
                            }
                            @if (!forb.Contains("PaymentMethod"))
                            {
                                <li>
                                    <a href="@Url.Content("~/PaymentMethod/Index")">@Resources.MenuApplicationSettingsPaymentMethods</a>
                                </li>
                            }
                            @if (!forb.Contains("MesurmentUnits"))
                            {
                                <li>
                                    <a href="@Url.Content("~/MesurmentUnits/Index")">@Resources.MenuApplicationSettingsMeasurmentUnits</a>
                                </li>
                            }
                            @if (!forb.Contains("BarcodeType"))
                            {
                                <li>
                                    <a href="@Url.Content("~/BarcodeType/Index")">@Resources.MenuApplicationSettingsBarcodeTypes</a>
                                </li>
                            }
                            @if (!forb.Contains("TaxOffice"))
                            {
                                <li>
                                    <a href="@Url.Content("~/TaxOffice/Index")">@Resources.TaxOffice</a>
                                </li>
                            }
                            @if (!forb.Contains("VatLevel"))
                            {
                                <li>
                                    <a href="@Url.Content("~/VatLevel/Index")">@Resources.MenuApplicationSettingsVATFactors</a>
                                </li>
                            }
                            @if (MvcApplication.ApplicationInstance != eApplicationInstance.RETAIL && !forb.Contains("FiscalDevices"))
                            {
                                <li>
                                    <a href="@Url.Content("~/FiscalDevices/Index")">@Resources.SignatureDevices</a>
                                </li>
                            }
                            @if (!forb.Contains("Role"))
                            {
                                <li>
                                    <a href="@Url.Content("~/Role/Index")">@Resources.MenuAdministrationRoles</a>
                                </li>
                            }
                            @if (!forb.Contains("ApplicationLog"))
                            {
                                <li>
                                    <a href="@Url.Content("~/ApplicationLog/Index")">@Resources.MenuAdministrationLogFiles</a>
                                </li>
                            }
                            @if (!forb.Contains("LicenseManagement"))
                            {
                                <li>
                                    <a href="@Url.Content("~/LicenseManagement/Index")">@Resources.LicenseManagement</a>
                                </li>
                            }
                            @if (!forb.Contains("ApplicationSettings"))
                            {
                                <li>
                                    <a href="@Url.Content("~/ApplicationSettings/Index")">@Resources.MenuApplicationSettingsAppSettings</a>
                                </li>
                            }
                        </ul>
                    </li>
                </ul>
            }
            @if (!forb.Contains("Store") ||
                     !forb.Contains("SpecialItem") ||
                     !forb.Contains("DocumentType") ||
                     !forb.Contains("DocumentSeries") ||
                     !forb.Contains("DocumentStatus") ||
                     !forb.Contains("OwnerApplicationSettings") ||
                     !forb.Contains("DataFileRecordHeader") ||
                     !forb.Contains("Division") ||
                     !forb.Contains("ReasonCategory") ||
                     !forb.Contains("Reason") ||
                     !forb.Contains("TransferPurpose") ||
                     !forb.Contains("CustomReport") ||
                     !forb.Contains("LabelDesign") ||
                     !forb.Contains("SupplierImportFilesSet") ||
                     !forb.Contains("MobileTerminal")
                 )
            {
                <ul>
                    <li class="subtitle">
                        <h4>@Resources.CompanySettings <span></span></h4>
                    </li>
                    <li class="options">
                        <ul>
                            @if (!forb.Contains("Store"))
                            {
                                <li>
                                    <a href="@Url.Content("~/Store/Index")">@Resources.Stores</a>
                                </li>
                            }
                            @if (!forb.Contains("SpecialItem"))
                            {
                                <li>
                                    <a href="@Url.Content("~/SpecialItem/Index")">@Resources.SpecialItems</a>
                                </li>
                            }
                            @if (!forb.Contains("DocumentSeries"))
                            {
                                <li>
                                    <a href="@Url.Content("~/DocumentSeries/Index")">@Resources.MenuDocumentSettigsDocumentSeries</a>
                                </li>
                            }
                            @if (!forb.Contains("DocumentType"))
                            {
                                <li>
                                    <a href="@Url.Content("~/DocumentType/Index")">@Resources.MenuDocumentSettigsDocumentTypes</a>
                                </li>
                            }
                            @if (!forb.Contains("DocumentStatus"))
                            {
                                <li>
                                    <a href="@Url.Content("~/DocumentStatus/Index")">@Resources.MenuDocumentSettigsDocumentStatus</a>
                                </li>
                            }
