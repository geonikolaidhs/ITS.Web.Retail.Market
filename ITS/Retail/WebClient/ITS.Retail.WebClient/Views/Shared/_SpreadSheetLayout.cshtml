@using System.Web.UI.WebControls;
@using ITS.Retail.ResourcesLib;
@using System.Web.Optimization;
<!DOCTYPE HTML>

<html>
<head>

    <title>@ViewBag.Title</title>


    @Html.DevExpress().GetStyleSheets(
                new StyleSheet { ExtensionSuite = ExtensionSuite.NavigationAndLayout, Theme = DevExpressHelper.Theme },
                new StyleSheet { ExtensionSuite = ExtensionSuite.Editors, Theme = DevExpressHelper.Theme },
                new StyleSheet { ExtensionSuite = ExtensionSuite.Spreadsheet, Theme = DevExpressHelper.Theme },
                new StyleSheet { ExtensionType = ExtensionType.FormLayout, Theme = DevExpressHelper.Theme },
                new StyleSheet { ExtensionType = ExtensionType.TextBox, Theme = DevExpressHelper.Theme }
    )

    <link href="@Url.Content("~/Content/bootstrap-3.3.5-dist/css/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap-3.3.5-dist/cosmo/fonts/SourceSansProFont.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap-3.3.5-dist/cosmo/css/bootstrap.css")" rel="stylesheet" type="text/css" />

    <link href="@Url.Content("~/Content/bootstrap-3.3.5-dist/cosmo/css/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/spreadsheet-custom.css")" rel="stylesheet" type="text/css" />

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="@Url.Content("~/Content/bootstrap-3.3.5-dist/js/jquery-2.1.4.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.11.1.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate-old.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive-old.js")"></script>
    


    @Html.DevExpress().GetScripts(
        new Script { ExtensionSuite = ExtensionSuite.NavigationAndLayout },
        new Script { ExtensionSuite = ExtensionSuite.Editors },
        new Script { ExtensionSuite = ExtensionSuite.Spreadsheet },
        new Script { ExtensionType = ExtensionType.FormLayout },
        new Script { ExtensionType = ExtensionType.TextBox }
    )

    @{
        Html.EnableClientValidation();
        Html.EnableUnobtrusiveJavaScript();
    }

     @RenderSection("HeaderScriptsAndStyles", required: false)
</head>
    <body>  
        <section class="wrapper">
            <section class="mainpage">
                <section class="RenderBody">
                    <div class="container-fluid">
                        @RenderBody()
                    </div>
                </section>

            </section>
        </section>
    </body>
</html>
