@using ITS.Retail.ResourcesLib;


@{
    ViewBag.Title = Resources.SpreadSheets;
    Layout = "~/Views/Shared/_SpreadSheetLayout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h1>@ViewBag.Title</h1>
        </div>
    </div>
</div>


<div class="row">    
    @using (Html.BeginForm())
    {
        <div class="col-md-12">
            <div class="pull-left">
                <a class="btn btn-info" href="@Url.Action("Index","SpreadSheet")"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> @Resources.Back</a>
            </div>

            <div class="btn-group pull-right" role="group">                
                <button type="submit" class="btn btn-primary right-margin"><span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> @Resources.Save</button>
                <button type="reset" class="btn btn-danger"><span class="glyphicon glyphicon-refresh" aria-hidden="true"></span> @Resources.Reset</button>
            </div>
            <div class="clearfix bottom-margin"></div>
        </div>
        <div class="col-md-12">
            <hr />
            @Html.Partial("FormLayoutPartial")
            <hr />
        </div>
        <div class="col-md-12">
            @Html.Partial("SpreadSheetPartial")
        </div>
    }

</div>