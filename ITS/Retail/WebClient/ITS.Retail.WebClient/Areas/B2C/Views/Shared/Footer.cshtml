@using ITS.Retail.ResourcesLib;

<footer>
    <div class="footer" id="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-2  col-md-2 col-sm-2 col-xs-6">
                    <h3> @Resources.Info </h3>
                    <ul>
                        <li> <a href="@Url.Content("~/B2C/Pages/Company")"> @Resources.Company </a> </li>
                        <li> <a href="@Url.Content("~/B2C/Pages/UsefullInfo")"> @Resources.UsefullInfo </a> </li>
                        <li> <a href="@Url.Content("~/B2C/Pages/FAQ")"> @Resources.FAQ </a> </li>
                    </ul>
                </div>
                <div class="col-lg-2  col-md-3 col-sm-3 col-xs-6">
                    <h3> @Resources.CustomerCare </h3>
                    <ul>
                        <li> <a href="@Url.Content("~/B2C/Contact")"> @Resources.ContactUs </a> </li>
                        @*
                            TODO include SITEMAP
                            <li> <a href="#"> @Resources.Sitemap </a> </li>
                        *@
                    </ul>
                </div>
                <div class="col-lg-2  col-md-3 col-sm-3 col-xs-6">
                    <h3> @Resources.MyAccount </h3>
                    <ul>
                        @if (ViewBag.IsUserLoggedIn)
                        {
                            <li> <a href="@Url.Content("~/B2C/Membership/Profile")"> @Resources.Profile </a> </li>
                            <li> <a href="@Url.Content("~/B2C/User/OrderHistory")"> @Resources.OrderHistory </a> </li>
                            <li> <a href="@Url.Content("~/B2C/WishList")"> @Resources.WishList</a></li>
                        }
                        else
                        {
                            <li><a href="@Url.Content("~/B2C/User/Login")">@Resources.PleaseLogin</a></li>
                        }
                    </ul>
                </div>
                <div class="col-lg-2  col-md-2 col-sm-2 col-xs-6">
                    <h3> @Resources.Terms </h3>
                    <ul>
                        <li> <a href="@Url.Content("~/B2C/Pages/TransactionsSafety")"> @Resources.TransactionsSafety </a> </li>
                        <li> <a href="@Url.Content("~/B2C/Pages/Terms")"> @Resources.TermsAndConditions </a> </li>
                        <li> <a href="@Url.Content("~/B2C/Pages/ProductsShipping")"> @Resources.ProductsShipping </a> </li>
                    </ul>
                </div>
                <div class="col-lg-4  col-md-2 col-sm-2 col-xs-12">

                    <!-- Begin MailChimp Signup Form -->
                    <div id="mc_embed_signup">
                        <form action="//its.us12.list-manage.com/subscribe/post?u=f9d8a8501fc88e7f1a56e1a33&amp;id=8cb3f52e77" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                            <div id="mc_embed_signup_scroll">
                                <h3> Newsletter </h3>
                                <div class="input-append newsletter-box text-center">
                                    <div class="mc-field-group">
                                        <input type="email" value="" name="EMAIL" class="required email full text-center" id="mce-EMAIL" placeholder="Email ">
                                    </div>
                                    <div id="mce-responses" class="clear">
                                        <div class="response" id="mce-error-response" style="display:none"></div>
                                        <div class="response" id="mce-success-response" style="display:none"></div>
                                    </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                                    <div style="position: absolute; left: -5000px;"><input type="text" name="b_f9d8a8501fc88e7f1a56e1a33_8cb3f52e77" tabindex="-1" value=""></div>
                                    <div class="clear">
                                        <button class="btn btn-info" type="submit" id="mc-embedded-subscribe"> @Resources.Submit <i class="fa fa-long-arrow-right"> </i> </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                    <!--End mc_embed_signup-->

                    <ul class="social">
                        @if (!String.IsNullOrWhiteSpace(ViewBag.Company.OwnerApplicationSettings.FacebookAccount))
                        {
                            <li> <a href="@ViewBag.Company.OwnerApplicationSettings.FacebookAccount" target="_blank"> <i class="fa fa-facebook">   </i> </a> </li>
                        }
                        @if (!String.IsNullOrWhiteSpace(ViewBag.Company.OwnerApplicationSettings.TwitterAccount))
                        {
                            <li> <a href="@ViewBag.Company.OwnerApplicationSettings.TwitterAccount" target="_blank"> <i class="fa fa-twitter">   </i> </a> </li>
                        }
                        @if (!String.IsNullOrWhiteSpace(ViewBag.Company.OwnerApplicationSettings.LinkedInAccount))
                        {
                            <li> <a href="@ViewBag.Company.OwnerApplicationSettings.LinkedInAccount" target="_blank"> <i class="fa fa-linkedin">   </i> </a> </li>
                        }

                        @if (!String.IsNullOrWhiteSpace(ViewBag.Company.OwnerApplicationSettings.eMail))
                        {
                            <li> <a href="mailto: @ViewBag.Company.OwnerApplicationSettings.eMail"> <i class="fa fa-envelope">   </i> </a> </li>
                        }

                    </ul>
                </div>
            </div>
            <!--/.row-->
        </div>
        <!--/.container-->
    </div>
    <!--/.footer-->
    <div class="footer-bottom">
        <div class="container">
            <p class="pull-left"> Copyright © ITS Services @DateTime.Now.Date.Year. All right reserved. </p>
            <div class="pull-right">
                <ul class="nav nav-pills payments">
                    <li><i class="fa fa-cc-visa"></i></li>
                    <li><i class="fa fa-cc-mastercard"></i></li>
                    <li><i class="fa fa-cc-amex"></i></li>
                    <li><i class="fa fa-cc-paypal"></i></li>
                </ul>
            </div>
        </div>
    </div>
    <!--/.footer-bottom-->
</footer>