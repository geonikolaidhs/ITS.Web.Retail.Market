@using ITS.Retail.ResourcesLib;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color:white;">
    <style>
        .row h2 {
            color: #00a7dd;
            font-family: cursive;
        }
    </style>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>  <a href="http://www.its.net.gr" target="_blank">ITS </a></li>
                    <li>  <a href="http://www.webretailmarket.gr" target="_blank">WRM</a> </li>
                    <li>@Html.ActionLink("API", "Index", "API", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />

        <div class="row" style="background-color:white;">
            <div class="" style="margin-right:15px; float:right; ">
                <span>
                    <a style="color: #00a7dd; margin-right:5px; font-weight:600;" href='#'>@Resources.DesignedDevelopedBy </a>
                </span>
                <span>
                    <a href='http://www.its.net.gr/'><img src="@Url.Content("~/Content/ITS.png")" /></a>
                </span>

                <span style="color: #00a7dd; margin:5px; font-size:12px; font-weight:600;">
                    Ver. @ViewBag.Version
                </span>

            </div>

            @*<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>*@
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
