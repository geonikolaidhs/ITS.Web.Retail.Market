<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <TextView
        android:id="@+id/lblCustDlgTaxCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/taxCode"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_small" />

    <EditText
        android:id="@+id/txtCustDlgTaxCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="@dimen/text_small" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/lblCustDlgCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/code"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_small" />

    <EditText
        android:id="@+id/txtCustDlgCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/lblMainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtPriceCatalog"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_small" />

    <Spinner
        android:id="@+id/cmbDialogPriceCatalog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lblMinorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/store"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_small" />

    <Spinner
        android:id="@+id/cmbDialogStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/Dummy24685782456"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal" >

        <Button
            android:id="@+id/btnCustDlgOk"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:text="@string/ok"
            android:textSize="@dimen/text_small"
            android:width="295dp" />

        <Button
            android:id="@+id/btnCustDlgCancel"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:text="@string/cancel"
            android:textSize="@dimen/text_small"
            android:width="295dp" />

    </LinearLayout>

</LinearLayout>

