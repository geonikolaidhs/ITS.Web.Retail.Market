<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_settings"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="0dp" >

<ScrollView
    android:id="@+id/dummyID3425656535454"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="10dp" >

    <LinearLayout
        android:id="@+id/dummyID342234234234"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/dummyID342s22434234"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lblServer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/serverurl"
                android:textSize="@dimen/text_tiny" />

            <EditText
                android:id="@+id/txtServer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:textSize="@dimen/text_tiny" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutSettingsForLoggedin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible" >

            <Button
                android:id="@+id/btnExportToSD"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginBottom="5dp"
                android:text="@string/exportDBtoSD"
                android:textSize="@dimen/text_tiny"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/importDBLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" >

                <Button
                    android:id="@+id/btnImportDB"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:text="@string/importDBfromSD"
                    android:textSize="@dimen/text_tiny"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/path"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/text_tiny"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/txtImportDBPath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textSize="@dimen/text_tiny"
                    android:visibility="visible" >

                    <requestFocus />
                </EditText>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dummyID34234234sa11339"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/dummyID34234234w39"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <CheckBox
                        android:id="@+id/chkAppSettingsDefaultStore"
                        android:layout_width="308dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/defaultStore"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/text_tiny" />

                    <Spinner
                        android:id="@+id/cmbAppSettingsDefaultStore"
                        style="@dimen/text_tiny"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dummyID34234234"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <CheckBox
                        android:id="@+id/chkAppSettingsDefaultPC"
                        android:layout_width="308dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/defaultPriceCatalog"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/text_tiny" />

                    <Spinner
                        android:id="@+id/cmbAppSettingsDefaultPriceCatalog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/chDefaultAllowMultiLines"
                    android:layout_width="308dp"
                    android:layout_height="wrap_content"
                    android:text="@string/defaultAllowMultiLines"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/text_tiny" />

                <LinearLayout
                    android:id="@+id/dummyid23526212334532"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView25236666343"
                        android:layout_width="308dp"
                        android:layout_height="fill_parent"
                        android:gravity="left|center_vertical"
                        android:text="@string/defaultDocumentStatus"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/text_tiny"
                        android:visibility="visible" />

                    <Spinner
                        android:id="@+id/cmbAppSettingsDefaultDocumentStatus"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dummyID38954234234"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/lblPathToXSL"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="@string/xslPath"
                    android:textSize="@dimen/text_tiny" />

                <EditText
                    android:id="@+id/txtPathToXSL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:textSize="@dimen/text_tiny" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dummyID342336g34234"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView4345775"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="@string/bluetoothScanner"
                    android:textSize="@dimen/text_tiny"
                    android:visibility="visible" />

                <Spinner
                    android:id="@+id/cmbBluetoothDevices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dummyID34224534234"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" >

            <Button
                android:id="@+id/btnSaveSettings"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="0.5"
                android:text="@string/savesettings"
                android:textSize="@dimen/text_small" />

            <Button
                android:id="@+id/btnRevertSettings"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="@string/revertsettings"
                android:textSize="@dimen/text_small" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
</FrameLayout>